            android:layout_marginTop="5dp"
            android:text="温度(C)"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="温度适宜"/>
    </LinearLayout>

</LinearLayout>